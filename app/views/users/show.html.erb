<div class="container">

<h2>ユーザー詳細（<%= @user.name %>）</h2
  <p><%= profile_img(@user) %></p>

<div class="row">
<h3><%= @user.name %>がフォローしている人</h3>
 <% @user.followed_users.each do |user| %>
  <div class="container-child col-md-2 col-sm-4 col-xs-6 ">
   <p><%= profile_img(user) %></p>
   <p><%= user.name %></p>
  </div>
 <% end %>
</div>

<div class="row">
<h3><%= @user.name %>をフォローしている人</h3>
 <% @user.followers.each do |user| %>
  <div class="container-child col-md-2 col-sm-4 col-xs-6 ">
   <p><%= profile_img(user) %></p>
   <p><%= user.name %></p>
  </div>
 <% end %>
 </div>

</div>
